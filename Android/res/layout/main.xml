<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <Button 
        android:id="@+id/btn_add_entry" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Start a Climbing Entry">
    </Button>
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="20dp" android:text="Recent Entries" android:textColor="#FFFFFF" android:textStyle="bold"></TextView>

    <ListView
        android:layout_width="fill_parent"
        android:id="@+id/lstLog" 
        android:layout_height="wrap_content"/>
    
</LinearLayout>
